{
  "name": "stackoverflowapi-test",
  "version": "1.0.0",
  "description": "A very simple example of Next.js-based website with Jest tests, all written in TypeScript",
  "scripts": {
    "lint": "next lint",
    "test": "jest",
    "test:cov": "jest --coverage",
    "start:dev": "next",
    "build": "next build",
    "start": "next start",
    "export": "next export"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pacobabs/stackoverflowapi-test.git"
  },
  "author": "pacobabs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pacobabs/stackoverflowapi-test/issues"
  },
  "homepage": "https://github.com/pacobabs/stackoverflowapi-test#readme",
  "dependencies": {
    "next": "^13.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@next/eslint-plugin-next": "^13.1.1",
    "@svgr/webpack": "^6.5.1",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-extended": "^3.1.0",
    "jest-localstorage-mock": "^2.4.22",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "react-reduce-hooks": "^1.1.2",
    "reduce-devtools-extension": "^2.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/__mocks__/svg.js",
      "\\.(css)$": "<rootDir>/__mocks__/styleMock.js",
      "^@assets(.*)$": "<rootDir>/src/assets$1",
      "^@components(.*)$": "<rootDir>/src/components$1",
      "^@services(.*)$": "<rootDir>/src/services$1",
      "^@store(.*)$": "<rootDir>/src/store$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ]
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)"
    ],
    "globalSetup": "<rootDir>/jest.setupEnv.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./.next/",
      "./node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/components/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  }
}
